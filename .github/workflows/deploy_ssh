name: ðŸš€ Deploy website on push (via SSH)

# Trigger the workflow on push and 
# pull request events on the production branch
on:
  push:
    branches:
      - production
  pull_request:
    branches:
      - production
      
# Authenticate to the the server via ssh 
# and run our deployment script 
jobs:
  deploy:
    name: ðŸŽ‰ Deploy
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Deploy to server
        uses: shimataro/ssh-key-action@v2
        with:
          host: 161.97.127.165
          username: heamantkr
          port: 22
          - name: Adding Known Hosts
            run: ssh-keyscan -H 161.97.127.165 >> ~/.ssh/known_hosts
          key: ${{ secrets.SSHKEY }}
          script: "cd /home/hemantkr/web/testing.rajasthanisong.in/public_html && ./.scripts/deploy.sh"